{
  "audio": {
    "sampling_rate": 16000,
    "n_fft": 1024,
    "frame_length_in_s": 0.04,
    "frame_step_in_s": 0.02,
    "n_mels": 40,
    "f_min": 0,
    "f_max": 8000,
    "max_length_in_s": 38.0,
    "normalize": true
  },

  "model": {
    "num_classes": 7,
    "dropout": 0.3
  },

  "optimizer": {
    "type": "Adam",
    "lr": 1e-3,
    "weight_decay": 1e-4
  },

  "training": {
    "num_epochs": 30,
    "batch_size": 16,
    "patience": 7,
    "val_split": 0.2,
    "seed": 42,
    "num_workers": 4,
    "checkpoint_dir": "checkpoints/audio"
  },

  "data": {
    "data_root": "/data1/malto/therness/data/audio",
    "test_root": "/data1/malto/therness/data/audio_test"
  }
}
